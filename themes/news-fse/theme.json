{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "background",
					"color": "#201e1e",
					"name": "Background"
				},
				{
					"slug": "body-text",
					"color": "#ffffff",
					"name": "Body Text"
				},
				{
					"slug": "secondary",
					"color": "#183153",
					"name": "Secondary"
				},
				{
					"slug": "hover",
					"color": "#ff0000",
					"name": "Hover"
				},
				{
					"slug": "tertiary",
					"color": "#ff2d2d",
					"name": "Tertiary"
				},
				{
					"slug": "variation-category-color-1",
					"color": "#201e1e",
					"name": "Variation Category Color-1"
				},
				{
					"slug": "variation-category-color-2",
					"color": "#FFFFFF",
					"name": "Variation Category Color 2"
				},
				{
					"slug": "light-dark",
					"color": "#181717",
					"name": "Light Dark"
				}
			]
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"layout": {
			"contentSize": "1130px",
			"wideSize": "1400px"
		},
		"typography": {
			"dropCap": false,
			"fontFamilies": [
				{
					"fontFamily": "\"Red Hat Display\", sans-serif",
					"name": "Red Hat Display",
					"slug": "red-hat-display",
					"fontFace": [
						{
							"fontFamily": "Red Hat Display",
							"fontWeight": "300",
							"fontStyle": "normal",
							"fontStretch": "",
							"src": [
								"file:./assets/font/redhat/RedHatDisplay-Light.ttf"
							]
						},
						{
							"fontFamily": "Red Hat Display",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "",
							"src": [
								"file:./assets/font/redhat/RedHatDisplay-Regular.ttf"
							]
						},
						{
							"fontFamily": "Red Hat Display",
							"fontWeight": "500",
							"fontStyle": "normal",
							"fontStretch": "",
							"src": [
								"file:./assets/font/redhat/RedHatDisplay-Medium.ttf"
							]
						},
						{
							"fontFamily": "Red Hat Display",
							"fontWeight": "600",
							"fontStyle": "normal",
							"fontStretch": "",
							"src": [
								"file:./assets/font/redhat/RedHatDisplay-SemiBold.ttf"
							]
						},
						{
							"fontFamily": "Red Hat Display",
							"fontWeight": "700",
							"fontStyle": "normal",
							"fontStretch": "",
							"src": [
								"file:./assets/font/redhat/RedHatDisplay-Bold.ttf"
							]
						}
					]
				},
				{
					"fontFamily": "Poppins, sans-serif",
					"name": "Poppins",
					"slug": "poppins",
					"fontFace": [
						{
							"fontFamily": "Poppins",
							"fontWeight": "300",
							"fontStyle": "normal",
							"fontStretch": "",
							"src": [
								"file:./assets/font/poppins/Poppins-Light.ttf"
							]
						},
						{
							"fontFamily": "Poppins",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "",
							"src": [
								"file:./assets/font/poppins/Poppins-Regular.ttf"
							]
						},
						{
							"fontFamily": "Poppins",
							"fontWeight": "500",
							"fontStyle": "normal",
							"fontStretch": "",
							"src": [
								"file:./assets/font/poppins/Poppins-Medium.ttf"
							]
						},
						{
							"fontFamily": "Poppins",
							"fontWeight": "600",
							"fontStyle": "normal",
							"fontStretch": "",
							"src": [
								"file:./assets/font/poppins/Poppins-SemiBold.ttf"
							]
						},
						{
							"fontFamily": "Poppins",
							"fontWeight": "700",
							"fontStyle": "normal",
							"fontStretch": "",
							"src": [
								"file:./assets/font/poppins/Poppins-Bold.ttf"
							]
						}
					]
				}
			],
            "fontSizes": [
				{
					"slug": "tiny",
					"size": "13px",
					"name": "Tiny"
				},
				{
					"slug": "extra-small",
					"size": "14px",
					"name": "Extra Small"
				},
				{
					"slug": "small",
					"size": "15px",
					"name": "Small"
				},
				{
					"slug": "medium",
					"size": "16px",
					"name": "Medium"
				},
				{
					"slug": "upper-heading",
					"size": "18px",
					"name": "Upper Heading"
				},
				{
					"slug": "normal",
					"size": "clamp(18px,1.6vw,20px)",
					"name": "Normal"
				},
				{
					"slug": "content-heading",
					"size": "clamp(22px,3vw,24px)",
					"name": "Content Heading"
				},
				{
					"slug": "large",
					"size": "clamp(24px,4.2vw,32px)",
					"name": "Large"
				},
				{
					"slug": "extra-large",
					"size": "clamp(28px,6vw,36px)",
					"name": "Extra large"
				}
			]
		},
		"custom": {
			"button-shadow": "0 8px 8px 0 rgba(0, 0, 0, 0.2)",
			"small-button-shadow": "0 1px 1px 0 rgba(0, 0, 0, 0.2)",
			"button-highlight": "0 0 0 #fff",
			"button-border-color": "rgba(0, 0, 0, 0.05)",
			"button-border-radius": "4px",
			"button-padding": ".3rem 1rem",
			"small": "max(1.75rem, 5vw)",
			"outer": "var(--wp--custom--small, 1.25rem)",
			"typography": {
				"font-size": {
					"heading-one": "clamp(36px,3.5vw,56px)",
					"heading-two": "clamp(32px,2.6vw,49px)",
					"heading-three": "clamp(28px,1.9vw,36px)",
					"heading-four": "clamp(24px,2vw,28px)",
					"heading-five": "clamp(22px,1.3vw,24px)",
					"heading-six": "18px",
					"huge-post-title": "clamp(38px,4.6vw,80px)"
				}
			}
		}
	},
	"styles": {
		"blocks":{
			"core/navigation": {
				"typography": {
					   "fontSize":"clamp(12px,5vw,17px)",
					"fontWeight": "500",
					"letterSpacing": "-0.02em"
				},
				"color": {
					"text": "#FFFFFF"
				}
			},
			"core/post-title": {
				"typography": {
					"line-height": "1.3"
				}
			},
			"core/site-title": {
				"typography": {
					   "fontSize":"clamp(24px,1.9vw,36px)"
				},
				"color": {
					"text": "#FFFFFF"
				}
			},
			"core/post-author": {
				"typography": {
					"fontSize": "14px",
					"fontWeight": "500"
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "14px",
					"fontWeight": "400"
				}
			},
			"core/read-more": {
				"typography": {
					"fontSize": "17px",
					"lineHeight": "1.334",
					"fontWeight": "500"
				}
			},
			"core/query-title": {
				"typography": {
					"fontSize": "45px",
					"lineHeight": "1",
					"letterSpacing": "-0.65px"
				}
			},
			"core/comments-title": {
				"typography": {
					"fontSize": "25px",
					"fontWeight": "500",
					"lineHeight": "1.3",
					"letter-spacing": "-0.65px !important"
				}
			},
			"core/comments-date": {
				"elements": {
					"link": {
						"typography": {
							"fontSize": "14px",
							"textDecoration": "none"
						}
					}
				}
			},
			"core/comment-reply-link": {
				"elements": {
					"link": {
						"typography": {
							"fontSize": "14px"
						}
					}
				}
			},
			"core/comment-author-name": {
				"elements": {
					"link": {
						"typography": {
							"fontSize": "14px",
							"textDecoration": "none"
						}
					}
				}
			},
			"core/comment-edit-link": {
				"elements": {
					"link": {
						"typography": {
							"fontSize": "16px",
							"textDecoration": "none"
						}
					}
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--body-text)"
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size-small)",
			"fontFamily": "var(--wp--preset--font-family--poppins)",
			"lineHeight": "1.625rem",
            "fontWeight": "400"
		},
		"elements": {
            "h1": {
				"typography": {
					"lineHeight": "1",
					"fontSize": "var(--wp--custom--typography--font-size--heading-one)",
					"fontWeight": "500"				}
			},
			"h2": {
				"typography": {
					"lineHeight": "1.3",
					"fontSize": "var(--wp--custom--typography--font-size--heading-two)",
					"fontWeight": "500"				}
			},
			"h3": {
				"typography": {
					"lineHeight": "1",
					"fontSize": "var(--wp--custom--typography--font-size--heading-three)"
				}
			},
			"h4": {
				"typography": {
					"lineHeight": "1",
					"fontSize": "var(--wp--custom--typography--font-size--heading-four)"
				}
			},
			"h5": {
				"typography": {
					"lineHeight": "1",
					"fontSize": "var(--wp--custom--typography--font-size--heading-five)"
				}
			},
			"h6": {
				"typography": {
					"lineHeight": "1",
					"fontSize": "var(--wp--custom--typography--font-size--heading-six)"
				}
			},
            "button": {
            	"typography": {
            		"lineHeight": "1",
            		"fontWeight": "500"
            	},
            	"border": {
            		"radius": "5px"
            	},
            	"color": {
            		"background": "var(--wp--preset--color--tertiary)"
            	},
            	":hover": {
            		"color": {
            			"background": "var(--wp--preset--color--hover)"
            		}
            	},
            	"spacing": {
            		"padding": {
            			"top": "clamp(10px, 2.5vw, 19px)",
						"right": "clamp(24px, 2.5vw, 40px)",
						"bottom": "clamp(10px, 2.5vw, 19px)",
						"left": "clamp(24px, 2.5vw, 40px)"
            		}
            	}
            },
            "link": {
            	"color": {
            		"text": "var(--wp--preset--color--body-text)"
            	},
            	"typography": {
            		"textDecoration": "none"
            	},
            	":hover": {
            		"typography": {
            			"textDecoration": "none"
            		},
            		"color": {
            			"text": "var(--wp--preset--color--body-text)"
            		}
            	},
            	":focus": {
            		"typography": {
            			"textDecoration": "none"
            		},
            		"color": {
            			"text": "var(--wp--preset--color--body-text)"
            		}
            	},
            	":active": {
            		"color": {
            			"text": "var(--wp--preset--color--body-text)"
            		},
            		"typography": {
            			"textDecoration": "none"
            		}
            	}

            }
        }
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
		{
			"area": "uncategorized",
			"name": "sidebar",
			"title": "Sidebar"
		}
	],
	"customTemplates": [
		{
			"name": "wc-custom-product-page",
			"title": "WooCommerce Custom Product Page",
			"postTypes": [ "post","page" ]
		}
	]
}
