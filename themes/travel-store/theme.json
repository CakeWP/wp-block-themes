  {
  "version": 2,
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        {
          "slug": "contrast",
          "color": "#000000",
          "name": "Contrast"
        },
        {
          "slug": "primary",
          "color": "#ffffff",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#f7fbfc",
          "name": "Secondary"
        }
      ],
      "gradients": [
        {
          "slug": "primary-white",
          "gradient": "linear-gradient(#ffffff 49.9%,#fff 50%)",
          "name": "Primary color to white"
        },
        {
          "slug": "white-primary",
          "gradient": "linear-gradient(#fff 49.9%,#ffffff 50%)",
          "name": "Horizontal white to Primary color"
        }
      ],
      "duotone": [
        {
          "colors": ["#f7fbfc", "#ffffff"],
          "slug": "secondary-primary",
          "name": "Secondary and primary"
        },
        {
          "colors": ["#ffffff", "#000000"],
          "slug": "primary-contrast",
          "name": "Primary and Contrast"
        }
      ]
    },
    "layout": {
      "contentSize": "1310px",
      "wideSize": "1400px"
    },
    "spacing": {
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"Barlow\", serif",
          "name": "Barlow",
          "slug": "barlow",
          "fontFace": [
            {
              "fontFamily": "Barlow",
              "fontWeight": "300",
              "fontStyle": "Light",
              "src": ["file: ./assets/fonts/barlow/Barlow-Light.ttf"]
            },
            {
              "fontFamily": "Barlow",
              "fontWeight": "400",
              "fontStyle": "Regular",
              "src": ["file:./assets/fonts/barlow/Barlow-Regular.ttf"]
            },
            {
              "fontFamily": "Barlow",
              "fontWeight": "500",
              "fontStyle": "Medium",
              "src": ["file:./assets/fonts/barlow/Barlow-Medium.ttf"]
            },
            {
              "fontFamily": "Barlow",
              "fontWeight": "600",
              "fontStyle": "SemiBold",
              "src": ["file:./assets/fonts/barlow/Barlow-SemiBold.ttf"]
            },
            {
              "fontFamily": "Barlow",
              "fontWeight": "700",
              "fontStyle": "Bold",
              "src": ["file:./assets/fonts/barlow/Barlow-Bold.ttf"]
            },
            {
              "fontFamily": "Barlow",
              "fontWeight": "800",
              "fontStyle": "ExtraBold",
              "src": ["file:./assets/fonts/barlow/Barlow-ExtraBold.ttf"]
            },
            {
              "fontFamily": "Barlow",
              "fontWeight": "900",
              "fontStyle": "Black",
              "src": ["file:./assets/fonts/barlow/Barlow-Black.ttf"]
            }
          ]
        },
        {
          "name": "System",
          "slug": "system",
          "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
        }
      ],
      "fontSizes": [
        {
          "slug": "extra-small",
          "size": "1rem",
          "name": "Extra small",
          "fluid": false
        },
        {
          "slug": "small",
          "size": "1.125rem",
          "name": "Small",
          "fluid": false
        },
        {
          "slug": "medium",
          "size": "1rem",
          "name": "Medium",
          "fluid": {
            "min": "1rem",
            "max": "1.25rem"
          }
        },
        {
          "slug": "large",
          "size": "2rem",
          "name": "Large",
          "fluid": {
            "min": "1.75rem",
            "max": "2rem"
          }
        },
        {
          "slug": "x-large",
          "size": "2.75rem",
          "name": "XL",
          "fluid": {
            "min": "2.5rem",
            "max": "2.75rem"
          }
        },
        {
          "slug": "xx-large",
          "size": "3.75rem",
          "name": "XXL",
          "fluid": {
            "min": "3rem",
            "max": "3.75rem"
          }
        }
      ]
    },
    "custom": {
      "typography": {
        "font-size": {
          "heading-one": "clamp(35px,3.5vw,38px)",
          "heading-two": "clamp(27px,2.6vw,30px)",
          "heading-three": "24px",
          "heading-four": "20px",
          "heading-five": "18px",
          "heading-six": "16px",
          "huge-post-title": "clamp(38px,4.6vw,80px)"
        }

      }
    },
    "useRootPaddingAwareAlignments": true
  },
  "styles": {
    "blocks": {
      "core/comment-author-name": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/comment-date": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/comment-edit-link": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/comment-reply-link": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/navigation": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "700"
        },
        "elements": {
          "link": {
            ":hover": {
              "typography": {
                "textDecoration": "underline"
              }
            },
            ":focus": {
              "typography": {
                "textDecoration": "underline"
              }
            },
            ":active": {
              "typography": {
                "textDecoration": "none"
              }
            },
            "typography": {
              "textDecoration": "none"
            }
          }
        }
      },
      "core/post-author": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--extra-small)"
        }
      },
      "core/post-date": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--extra-small)"
        }
      },
      "core/post-navigation-link": {
        "typography": {
          "fontWeight": "700"
        }
      },
      "core/post-terms": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--extra-small)"
        }
      },
      "core/post-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)"
        }
      },
      "core/query-pagination": {
        "typography": {
          "fontWeight": "700"
        }
      },
      "core/query-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)"
        }
      },
      "core/site-title": {
        "elements": {
          "link": {
            ":hover": {
              "typography": {
                "textDecoration": "underline"
              }
            },
            ":focus": {
              "typography": {
                "textDecoration": "underline"
              }
            },
            ":active": {
              "typography": {
                "textDecoration": "none"
              }
            },
            "typography": {
              "textDecoration": "none"
            }
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      }
    },
    "color": {
      "background": "var(--wp--preset--color--primary)"  
    },
    "elements": {
      "h1": {
        "typography": {
          "lineHeight": "1",
          "fontSize": "var(--wp--custom--typography--font-size--heading-one)",
          "fontWeight": "500"       
        }
      },
      "h2": {
        "typography": {
          "lineHeight": "1.5",
          "fontSize": "var(--wp--custom--typography--font-size--heading-two)",
          "fontWeight": "500"       }
      },
      "h3": {
        "typography": {
          "lineHeight": "1.5",
          "fontSize": "var(--wp--custom--typography--font-size--heading-three)",
          "fontWeight": "400"
        }
      },
      "h4": {
        "typography": {
          "lineHeight": "1",
          "fontSize": "var(--wp--custom--typography--font-size--heading-four)",
          "fontWeight": "600"
        }
      },
      "h5": {
        "typography": {
          "lineHeight": "1",
          "fontSize": "var(--wp--custom--typography--font-size--heading-five)",
          "fontWeight": "400"
        }
      },
      "h6": {
        "typography": {
          "lineHeight": "1",
          "fontSize": "var(--wp--custom--typography--font-size--heading-six)",
          "fontWeight": "600"
        }
      },
      "button": {
        "border": {
          "width": "4px",
          "style": "solid",
          "radius": "4px"
        },
        "color": {
          "background": "var(--wp--preset--color--contrast)",
          "text": "var(--wp--preset--color--primary)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "700"
        },
        ":hover": {
          "border": {
            "color": "var(--wp--preset--color--secondary)"
          }
        }
      },
     "link": {
        "color": {
          "text": "#000000"
        },
        ":hover": {
          "typography": {
            "textDecoration": "none"
          }
        },
        ":focus": {
          "typography": {
            "textDecoration": "underline"
          }
        },
        ":active": {
          "color": {
            "text": "var(--wp--preset--color--contrast)"
          },
          "typography": {
            "textDecoration": "none"
          }
        },
        "typography": {
          "textDecoration": "underline"
        }
      }
    },
    "spacing": {
      "padding": {
        "right": "var(--wp--preset--spacing--50)",
        "left": "var(--wp--preset--spacing--50)"
      }
    },
    "typography": {
      "fontSize": "15px",
      "fontFamily": "var(--wp--preset--font-family--system)",
      "lineHeight": "1.6"
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    },
    {
      "name": "sidebar",
      "title": "Sidebar",
      "area": "uncategorized"
    },
    {
      "name": "newsletter-form",
      "title": "Newsletter Form",
      "area": "uncategorized"
    }
  ]
}
