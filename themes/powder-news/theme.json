{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#000000",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#cc0099",
					"name": "Primary",
					"slug": "primary"
				}
			]
		},
		"layout": {
			"contentSize": "600px",
			"wideSize": "1200px"
		}
	},
	"styles": {
		"blocks": {
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--max-48)",
					"fontWeight": "var(--wp--custom--font-weight--medium)"
				}
			},
			"core/query-pagination": {
				"color": {
					"background": "var(--wp--preset--color--base)"
				},
				"spacing": {
					"padding": {
						"bottom": "36px",
						"top": "36px"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-small)"
				}
			}
		},
		"elements": {
			"button": {
				"border": {
					"radius": "8px"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--base)"
				}
			}
		}
	}
}