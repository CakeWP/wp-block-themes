{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "layout": {
			"contentSize": "768px",
			"wideSize": "1170px"
		},
        "color": {
            "palette": [
                {
                    "color": "#ef4a2b",
                    "name": "Primary",
                    "slug": "primary"
                },
                {
                    "color": "#000000",
                    "name": "Secondary",
                    "slug": "secondary"
                },
                {
                    "color": "#616161",
                    "name": "Foreground",
                    "slug": "foreground"
                },
                {
                    "color": "#ffffff",
                    "name": "background",
                    "slug": "Background"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "\"Playfair Display\", serif",
                    "name": "Playfair Display",
                    "slug": "playfair-display",
                    "fontFace": [
                        {
                            "fontFamily": "Playfair Display",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontStretch": "",
                            "src": [
                                "file:./assets/fonts/PlayfairDisplay-Regular.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Playfair Display",
                            "fontWeight": "500",
                            "fontStyle": "normal",
                            "fontStretch": "",
                            "src": [
                                "file:./assets/fonts/PlayfairDisplay-Medium.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Playfair Display",
                            "fontWeight": "600",
                            "fontStyle": "normal",
                            "fontStretch": "",
                            "src": [
                                "file:./assets/fonts/PlayfairDisplay-SemiBold.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Playfair Display",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "fontStretch": "",
                            "src": [
                                "file:./assets/fonts/PlayfairDisplay-Bold.ttf"
                            ]
                        }
                    ]
                }
            ],
            "fontSizes": [
                {
                    "name": "Small",
                    "size": "14px",
                    "slug": "small"
                },
                {
                    "name": "Normal",
                    "size": "16px",
                    "slug": "normal"
                },
                {
                    "name": "Regular",
                    "size": "18px",
                    "slug": "regular"
                },
                {
                    "name": "Medium",
                    "size": "20px",
                    "slug": "medium"
                },
                {
                    "name": "Large",
                    "size": "clamp(1.375rem, 1.3rem + 0.375vw, 1.75rem)",
                    "slug": "large"
                },
                {
                    "name": "Extra Large",
                    "size": "clamp(1.5rem, 1.4rem + 0.5vw, 2rem)",
                    "slug": "extra-large"
                },
                {
                    "name": "Huge",
                    "size": "clamp(1.75rem, 1.6rem + 0.75vw, 2.5rem)",
                    "slug": "huge"
                },
                {
					"slug": "gigantic",
					"size": "clamp(2rem, 1.775rem + 1.125vw, 3.125rem)",
					"name": "Gigantic"
				}

            ],
            "fontWeight": true
        },
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true,
        "spacing": {
            "padding": true,
			"margin": true,
			"blockGap": true,
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		}
    },
    "styles": {
        "blocks": {
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontSize": "var(--wp--preset--font-size--gigantic)",
                    "fontWeight": "700"
                },
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--primary)"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--secondary)"
                            },
                            "typography": {
                                "textDecoration": "underline"
                            }
                        },
                        ":focus": {
                            "color": {
                                "text": "var(--wp--preset--color--secondary)"
                            }
                        },
                        ":active": {
                            "color": {
                                "text": "var(--wp--preset--color--secondary)"
                            }
                        }
                    }
                }
            },
            "core/navigation": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontSize": "var(--wp--preset--font-size--normal)",
                    "fontWeight": "600"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--secondary)"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--primary)"
                            },
                            "typography": {
                                "textDecoration": "underline"
                            }
                        },
                        ":focus": {
                            "color": {
                                "text": "var(--wp--preset--color--primary)"
                            },
                            "typography": {
                                "textDecoration": "underline"
                            }
                        },
                        ":active": {
                            "color": {
                                "text": "var(--wp--preset--color--primary)"
                            },
                            "typography": {
                                "textDecoration": "underline"
                            }
                        },
                        ":visited": {
                            "color": {
                                "text": "var(--wp--preset--color--primary)"
                            },
                            "typography": {
                                "textDecoration": "underline"
                            }
                        }
                    }
                }
            },
            "core/media-text": {
                "spacing": {
                    "padding": {
                        "top": "0",
                        "right": "30px",
                        "bottom": "0",
                        "left": "0"
                    }
                }
            },
            "core/more": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--primary)"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--secondary)"
                            }
                        }
                    }
                }
            },
            "core/quote": {
                "spacing": {
                    "padding": {
                        "top": "15px",
                        "right": "30px",
                        "bottom": "15px",
                        "left": "30px"
                    },
                    "margin": {
                        "top": "50px",
                        "right": "0",
                        "bottom": "50px"
                    }
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontStyle": "italic"
                }
            },
            "core/comments": {
                "spacing": {
                    "padding": {
                        "top": "30px",
                        "right": "30px",
                        "bottom": "30px",
                        "left": "30px"
                    }
                }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--playfair-display)",
            "fontSize": "15px",
            "lineHeight": "1.5",
            "fontWeight": "400"
        },
        "color": {
            "text": "var(--wp--preset--color--foreground)",
            "background": "var(--wp--preset--color--background)"
        },
        "spacing": {
            "margin": {
                "top": "0",
                "bottom": "0",
                "right": "0",
                "left": "0"
            }
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--primary)"
                    }
                },
                ":focus": {
                    "color": {
                        "text": "var(--wp--preset--color--primary)"
                    },
                    "outline": {
                        "width": "1px",
                        "style": "dotted"
                    }
                }
            },
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                },
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "35px"
                    }
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                },
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "30px"
                    }
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                },
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "25px"
                    }
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                },
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "20px"
                    }
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                },
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "16px"
                    }
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                },
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "12px"
                    }
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--white)"
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--secondary)",
                        "text": "var(--wp--preset--color--white)"
                    }
                }

            }
        }
    },
	"templateParts": [
		{
			"name": "header",
			"area": "header"
		},
		{
			"name": "footer",
			"area": "footer"
		}
	]
}