{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank",
			"postTypes": [
				"page",
				"post"
			]
		}
	],
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"palette": [
				{
					"slug": "foreground",
					"color": "var(--wp--preset--color--black)",
					"name": "Foreground"
				},
				{
					"slug": "background",
					"color": "var(--wp--preset--color--white)",
					"name": "Background"
				},
				{
					"slug": "primary",
					"color": "#0c54a5",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#bcd",
					"name": "Secondary"
				},
				{
					"slug": "primarycontrast",
					"color": "var(--wp--preset--color--white)",
					"name": "Primary Contrast"
				},
				{
					"slug": "secondarycontrast",
					"color": "var(--wp--preset--color--black)",
					"name": "Secondary Contrast"
				}
			]
		},
		"layout": {
			"contentSize": "840px",
			"wideSize": "1100px"
		},
		"spacing": {
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"fluid": true,
			"fontFamilies": [
				{
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
					"name": "System Font",
					"slug": "system-font"
				}
			],
			"fontSizes": [
				{
					"name": "Extra Extra Small",
					"slug": "xx-small",
					"size": "0.5",
					"fluid": {
						"min": "0.3rem",
						"max": "0.5rem"
					}
				},
				{
					"name": "Extra Small",
					"slug": "x-small",
					"size": "0.875rem",
					"fluid": {
						"min": "0.5rem",
						"max": "0.875rem"
					}
				},
				{
					"name": "Small",
					"slug": "small",
					"size": "1rem",
					"fluid": {
						"min": "0.875rem",
						"max": "1rem"
					}
				},
				{
					"name": "Medium",
					"slug": "medium",
					"size": "1.125rem",
					"fluid": {
						"min": "1rem",
						"max": "1.125rem"
					}
				},
				{
					"name": "Large",
					"slug": "large",
					"size": "2rem",
					"fluid": {
						"min": "1.75rem",
						"max": "2rem"
					}
				},
				{
					"name": "Extra Large",
					"size": "3.25rem",
					"slug": "x-large",
					"fluid": {
						"min": "2rem",
						"max": "3.25rem"
					}
				},
				{
					"name": "Extra Extra Large",
					"size": "5rem",
					"slug": "xx-large",
					"fluid": {
						"min": "3.25rem",
						"max": "5rem"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":focus": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":active": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/post-author": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontStyle": "italic",
					"fontWeight": "300"
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"lineHeight": "1.6"
				}
			},
			"core/file": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--primary)",
							"background": "transparent"
						}
					}
				}
			},
			"core/quote": {
				"spacing": {
					"padding": {
						"left": "20px",
						"right": "20px"
					}
				}
			},
			"core/pullquote": {
				"border": {
					"top": {
						"style": "solid",
						"width": "2px"
					},
					"bottom": {
						"style": "solid",
						"width": "2px"
					}
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "1.2"
				}
			},
			"core/comments-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"core/comment-reply-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-edit-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-small)"
				}
			},
			"core/comment-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			}
		},
		"elements": {
			"cite": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-small)"
				}
			},
			"caption": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-small)"
				}
			},
			"button": {
				"border": {
					"radius": "0"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--primarycontrast)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--secondarycontrast)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--secondarycontrast)"
					}
				},
				":active": {
					"typography": {
						"textDecoration": "underline"
					}
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"typography": {
						"textDecoration": "none"
					}
				},
				":active": {
					"typography": {
						"textDecoration": "none"
					}
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "400",
					"lineHeight": "1.4"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"lineHeight": "1.2"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"lineHeight": "1.2"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "600",
					"textTransform": "uppercase"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"textTransform": "uppercase"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-small)",
					"textTransform": "uppercase"
				}
			}
		},
		"spacing": {
			"padding": {
				"right": "var(--wp--preset--spacing--50)",
				"left": "var(--wp--preset--spacing--50)"
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"fontWeight": "300",
			"lineHeight": "1.6"
		},
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--foreground)"
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		},
		{
			"area": "uncategorized",
			"name": "comments",
			"title": "Comments"
		}
	]
}
