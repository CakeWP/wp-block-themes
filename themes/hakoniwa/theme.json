{
	"version": 2,
	"settings": {
		"useRootPaddingAwareAlignments": true,
		"appearanceTools": true,
		"color": {
			"gradients": [],
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#111111",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#308dca",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#2879ae",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#f6f6f6",
					"name": "Tertiary",
					"slug": "tertiary"
				}
			]
		},
		"layout": {
			"contentSize": "640px",
			"wideSize": "960px"
		},
		"spacing": {
			"blockGap": true,
			"customPadding": true,
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			],
			"spacingScale": {
				"operator": "*",
				"increment": 1.5,
				"steps": 7,
				"mediumStep": 1.25,
				"unit": "rem"
			}
		},
		"custom": {
			"gutter": "1rem",
			"spacing":{
				"outer":"1rem"
			},
			"line-height": {
				"0": 0,
				"1": 1,
				"xs": 1.15,
				"sm": 1.4,
				"md": 1.6,
				"lg": 1.8,
				"xl": 2,
				"2xl": 2.2,
				"3xl": 2.4
			},
			"style":{
				"block-gap": "2rem"
			},
			"border-width": "1px",
			"border-radius": "0.25rem",
			"padding": "0.25rem",
			"gap": "0.25rem"
		},

		"shadow": {
			"preset": [
				{
					"name": "Shadow Name",
					"slug": "slug",
					"shadow": "5px 5px 0px -2px #FFFFFF, 5px 5px #000000"
				}
			]
		},
		"typography": {
			"customLineHeight": true,
			"fontFamilies": [
				{
					"fontFamily": "-apple-system,BlinkMacSystemFont,Roboto,\"Droid Sans\",Meiryo,YuGothic,\"Hiragino Kaku Gothic Pro\",\"MS PMincho\",sans-serif",
					"name": "System Font",
					"slug": "system-font"
				},
				{
					"fontFamily": "\"Yu Mincho\", YuMincho, \"Hiragino Mincho ProN W3\", \"Hiragino Mincho ProN\", \"HG明朝E\", \"ＭＳ Ｐ明朝\", \"ＭＳ 明朝\", serif",
					"name": "mincho",
					"slug": "mincho"
				},
				{
					"fontFamily": "\"Source Serif Pro\", serif",
					"name": "Source Serif Pro",
					"slug": "source-serif-pro"
				}
			],
			"fontSizes": [
				{
					"name": "1rem",
					"slug": "1rem",
					"size": "1rem"
				},
				{
					"name": "main-content",
					"slug": "main-content",
					"size": "clamp(1rem, 0.964rem + 0.18vw, 1.1rem)"
				},
				{
					"name": "3xl",
					"slug": "3xl",
					"size": "clamp(1.6rem, 1.4rem + 1vw, 2rem)"
				},
				{
					"name": "2xl",
					"slug": "2xl",
					"size": "clamp(1.55rem, 1.4rem + 0.75vw, 1.85rem)"
				},
				{
					"name": "xl",
					"slug": "xl",
					"size": "clamp(1.4rem, 1.3rem + 0.5vw, 1.6rem)"
				},
				{
					"name": "lg",
					"slug": "lg",
					"size": "clamp(1.2rem, 1.1rem + 0.5vw, 1.4rem)"
				},
				{
					"name": "md",
					"slug": "md",
					"size": "clamp(1.05rem, 0.975rem + 0.37vw, 1.2rem)"
				},
				{
					"name": "sm",
					"slug": "sm",
					"size": "clamp(1rem, 0.925rem + 0.37vw, 1.15rem)"
				},
				{
					"name": "xs",
					"slug": "xs",
					"size": "clamp(0.95rem, 0.875rem + 0.38vw, 1.1rem)"
				},
				{
					"name": "2xs",
					"slug": "2xs",
					"size": "clamp(0.85rem, 0.837rem + 0.06vw, 0.875rem)"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/buttons": {
				"spacing": {
					"blockGap": "var(--wp--custom--style--block-gap)"
				}
			},
			"core/button": {
				"border": {
					"radius": "0"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)"
				}
			},
			"core/post-title": {
				"spacing": {
					"margin": {
						"bottom": "1.25rem",
						"top": "1.25rem"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--3-xl)"
				}
			},
			"core/query-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--3-xl)"
				}
			},
			"core/cover": {
				"spacing": {
					"padding": {
						"top": "0px",
						"right": "0px",
						"bottom": "0px",
						"left": "0px"
					},
					"blockGap": "var(--wp--custom--style--block-gap)"
				}
			},
			"core/group": {
				"spacing": {
					"blockGap": "var(--wp--custom--style--block-gap)"
				}
            },
			"core/columns": {
				"spacing": {
					"blockGap": "var(--wp--custom--style--block-gap)"
				}
            },
			"core/post-content": {
				"elements": {
					"h1": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--2-xl)"
                        }
                    },
                    "h2": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--xl)"
                        }
                    },
                    "h3": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--lg)"
                        }
                    },
					"h4": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--md)"
                        }
                    },
					"h5": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--sm)"
                        }
                    },
					"h6": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--xs)"
                        }
                    },
					"link": {
						"color": {
							"text": "var(--wp--preset--color--primary)"
						},
						":hover": {
							"typography": {
								"textDecoration": "none"
							}
						},
						"typography": {
							"textDecoration": "underline"
						}
					}
                },
				"spacing": {
					"blockGap": "var(--wp--custom--style--block-gap)"
				}
			},
			"core/post-excerpt": {
				"spacing": {
					"margin": {
						"bottom": "0.5rem",
						"top": "0.5rem"
					}
				}
			},
			"core/query": {
			},
			"core/search": {
            },
			"core/calendar": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--primary)"
						}
					}	
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"elements": {
			"heading":{
				"typography": {
					"fontWeight": "normal"
				}
			},
			"h1": {
				"typography": {
					"lineHeight": "var(--wp--custom--line-height--md)"
				}
			},
			"h2": {
				"typography": {
					"lineHeight": "var(--wp--custom--line-height--md)"
				}
			},
			"h3": {
				"typography": {
					"lineHeight": "var(--wp--custom--line-height--md)"
				}
			},
			"h4": {
				"typography": {
					"lineHeight": "var(--wp--custom--line-height--sm)"
				}
			},
			"h5": {
				"typography": {
					"lineHeight": "var(--wp--custom--line-height--sm)"
				}
			},
			"h6": {
				"typography": {
					"lineHeight": "var(--wp--custom--line-height--sm)"
				}
			},
			"button": {
				"border": {
					"radius": "0"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--base)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				},
				"typography": {
					"textDecoration": "none"
				}
			}
		},
		"spacing": {
			"blockGap": "var(--wp--custom--style--block-gap)",
			"padding": {
                "top": "0",
                "right": "2rem",
                "bottom": "0",
                "left": "2rem"
            }
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)",
			"fontSize": "var(--wp--preset--font-size--1-rem)",
			"lineHeight": "var(--wp--custom--line-height--md)",
			"letterSpacing":"0.07rem"
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "header-wide",
			"title": "Header (Wide)",
			"area": "header"
		},
		{
			"name": "header-dark",
			"title": "Header (Dark)",
			"area": "header"
		},
		{
			"name": "header-center",
			"title": "Header Center",
			"area": "header"
		},
		{
			"name": "header-button",
			"title": "Header Button",
			"area": "header"
		},
		{
			"name": "header-wide-and-search-button",
			"title": "Header wide and search button",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
		{
			"name": "footer-2-columns",
			"title": "Footer 2 Columns",
			"area": "footer"
		},
		{
			"name": "footer-3-columns",
			"title": "Footer 3 Columns",
			"area": "footer"
		}
	]
}
