{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"customTemplates": [
		{
			"name": "blank",
			"postTypes": [
				"page",
				"post"
			],
			"title": "Blank"
		},
		{
			"name": "404",
			"postTypes": [
				"page"
			],
			"title": "404"
		}
	],
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "header",
			"name": "header-home",
			"title": "Header Home"
		},
		{
			"area": "header",
			"name": "header-menu",
			"title": "Header Menu"
		},
		{
			"area": "header",
			"name": "header-tagline",
			"title": "Header Tagline"
		},
		{
			"area": "header",
			"name": "header-social",
			"title": "Header Social"
		},
		{
			"area": "uncategorized",
			"name": "loop",
			"title": "Loop"
		},
		{
			"area": "uncategorized",
			"name": "loop-search",
			"title": "Loop Search"
		},
		{
			"area": "uncategorized",
			"name": "loop-entry",
			"title": "Loop Entry"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		},
		{
			"area": "uncategorized",
			"name": "comments",
			"title": "Comments"
		}
	],
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#333333",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#15803d",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#00401D",
					"name": "Secondary",
					"slug": "secondary"
				}
			]
		},
		"layout": {
			"contentSize": "740px",
			"wideSize": "900px"
		},
		"spacing": {
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
				{
					"size": "1.25rem",
					"slug": "x-small",
					"name": "Extra Small"
				},
				{
					"size": "2.5rem",
					"slug": "small",
					"name": "Small"
				},
				{
					"size": "3.75rem",
					"slug": "medium",
					"name": "Medium"
				},
				{
					"size": "5rem",
					"slug": "large",
					"name": "Large"
				},
				{
					"size": "6.25rem",
					"slug": "x-large",
					"name": "Extra Large"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Source Serif",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "200 900",
							"src": [
								"file:./assets/fonts/source-serif/SourceSerif4Variable-Roman.ttf.woff2"
							]
						},
						{
							"fontFamily": "Source Serif",
							"fontStretch": "normal",
							"fontStyle": "italic",
							"fontWeight": "200 900",
							"src": [
								"file:./assets/fonts/source-serif/SourceSerif4Variable-Italic.ttf.woff2"
							]
						}
					],
					"fontFamily": "\"Source Serif\", serif",
					"name": "Source Serif",
					"slug": "source-serif"
				},
				{
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
					"name": "System Font",
					"slug": "system-font"
				}
			],
			"fontSizes": [
				{
					"fluid": false,
					"size": "0.875rem",
					"slug": "x-small"
				},
				{
					"fluid": false,
					"size": "1rem",
					"slug": "small"
				},
				{
					"fluid": false,
					"size": "1.125rem",
					"slug": "base"
				},
				{
					"fluid": false,
					"size": "1.5rem",
					"slug": "medium"
				},
				{
					"fluid": false,
					"size": "1.75rem",
					"slug": "large"
				},
				{
					"fluid": false,
					"size": "2rem",
					"slug": "x-large"
				},
				{
					"fluid": false,
					"size": "2.5rem",
					"slug": "xx-large"
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"spacing": {
			"blockGap": "1.5rem",
			"padding": {
				"top": "var(--wp--preset--spacing--small)",
				"right": "var(--wp--preset--spacing--small)",
				"bottom": "var(--wp--preset--spacing--small)",
				"left": "var(--wp--preset--spacing--small)"
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--source-serif)",
			"fontSize": "var(--wp--preset--font-size--base)",
			"lineHeight": "1.75"
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"elements": {
			"button": {
				"border": {
					"radius": "0"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--base)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)"
					}
				}
			},
			"h1": {
				"typography": {
					"fluid": {
						"min": "2.25rem",
						"max": "2.625rem"
					},
					"fontSize": "2.625rem"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--base)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"textTransform": "uppercase",
					"letterSpacing": ".1rem"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"textTransform": "uppercase",
					"letterSpacing": ".1rem"
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "700",
					"lineHeight": "1.4"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				"typography": {
					"textDecoration": "underline"
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"css": "& .wp-block-navigation__responsive-container-open svg {height:1.75rem;width:1.75rem;} & .wp-block-navigation__responsive-close{max-width:none;} & .wp-block-navigation__responsive-container {margin-block-start:0;} .wp-block-navigation__responsive-container .wp-block-categories-list li {margin-top:1rem;margin-bottom:1rem;}",
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":active": {
							"typography": {
								"textDecoration": "none"
							}
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--base)"
				}
			},
			"core/post-author-name": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--secondary)"
						},
						"typography": {
							"textDecoration": "underline"
						}
					}
				}
			},
			"core/post-featured-image": {
				"css": "&.opacity-hover a:hover img {opacity:.9}"
			},
			"core/social-links": {
				"css": "&.has-icon-color .wp-social-link{color:var(--wp--preset--color--contrast)} &.has-small-icon-size{font-size:var(--wp--preset--font-size--base)}"
			},
			"core/code": {
				"color": {
					"background": "#f4f4f5"
				},
				"spacing": {
					"padding": {
						"top": "1.5rem",
						"right": "1.5rem",
						"bottom": "1.5rem",
						"left": "1.5rem"
					}
				}
			},
			"core/post-terms": {
				"elements": {
					"link": {
						"color": {
							"background": "var(--wp--preset--color--primary)",
							"text": "var(--wp--preset--color--base)"
						},
						"typography": {
							"textDecoration": "none"
						},
						"spacing": {
							"padding": {
								"top": "6px",
								"right": "12px",
								"bottom": "6px",
								"left": "12px"
							}
						}
					}
				}
			},
			"core/post-excerpt": {
				"css": "& .wp-block-post-excerpt__more-link { text-decoration: none; } & .wp-block-post-excerpt__more-link:hover {text-decoration: underline; }"
			},
			"core/post-title": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						},
						":active": {
							"color": {
								"text": "var(--wp--preset--color--secondary)"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/comments-title":{
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--medium)"
					}
				}
			},
			"core/comment-author-name": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						"typography": {
							"textDecoration": "none",
							"fontWeight": "600"
						}
					}
				}
			},
			"core/comment-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				},
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":focus": {
							"typography": {
								"textDecoration": "underline dashed"
							}
						},
						":active": {
							"color": {
								"text": "var(--wp--preset--color--secondary)"
							},
							"typography": {
								"textDecoration": "none"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/comment-edit-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-reply-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comments-pagination": {
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--medium)"
					}
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/pullquote": {
				"border": {
					"style": "solid",
					"width": "1px 0"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--base)",
							"fontStyle": "normal",
							"textTransform": "none"
						}
					}
				},
				"typography": {
					"lineHeight": "1.3"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--medium) !important",
						"top": "var(--wp--preset--spacing--medium) !important"
					}
				}
			},
			"core/query": {
				"elements": {
					"h2": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--x-large)"
						}
					}
				}
			},
			"core/query-pagination": {
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/query-pagination-numbers": {
				"css": "display:flex;flex-wrap:wrap;gap:15px;"
			},
			"core/quote": {
				"border": {
					"width": "1px"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--base)",
							"fontStyle": "normal"
						}
					}
				},
				"spacing": {
					"padding": {
						"left": "var(--wp--preset--spacing--small)",
						"right": "var(--wp--preset--spacing--small)"
					}
				}
			},
			"core/site-title": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--source-serif)",
					"fontSize": "3rem",
					"fontWeight": "700",
					"lineHeight": "1.4"
				}
			}
		}
	}
}
